{
    "topicSources": [
        {
            "topic": "MY-TOPIC",
            "servers": [
                "localhost:${port}"
            ],
            "topicCommInfrastructure": "dmaap",
            "fetchTimeout": 100
        },
        {
            "topic": "MY-AUTH-TOPIC",
            "servers": [
                "localhost:${authPort}"
            ],
            "topicCommInfrastructure": "dmaap",
            "fetchTimeout": 100,
            "useHttps": true,
            "allowSelfSignedCerts": true,
            "userName": "my-username",
            "password": "my-password"
        }
    ],
    "topicSinks": [
        {
            "topic": "MY-TOPIC",
            "servers": [
                "localhost:${port}"
            ],
            "topicCommInfrastructure": "dmaap"
        },
        {
            "topic": "MY-AUTH-TOPIC",
            "servers": [
                "localhost:${authPort}"
            ],
            "topicCommInfrastructure": "dmaap",
            "useHttps": true,
            "allowSelfSignedCerts": true,
            "userName": "my-username",
            "password": "my-password"
        }
    ]
}